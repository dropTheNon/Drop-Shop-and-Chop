<div class="card text-center mx-auto mb-3" style="width: 30rem">
  <img id="info-image" class="card-img-top" src="{{image}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">Serves {{servings}}</p>
    <p class="card-text">Ready in {{readyInMinutes}} minutes</p>
    <ul>
    {{#each ingredients}}
        <li class="card-text" style="list-style-type: none;">{{this.name}} - {{this.amount}} {{this.unit}}</li>
    {{/each}}
    </ul>
    <p class="card-text">{{instructions}}</p>
    <a class="card-text" href="{{sourceUrl}}"><small class="text-muted">Recipe source</small></a>
    <a href="/recipes/save/{{id}}" class="btn btn-success">Save to MyRecipes</button>
  </div>
</div>
